/* pages/masterModify/materModify.wxss */

.masterModify {
  background-color: #fff;
}
page{
  width: 100%;
  background-color: #fff;
}
/*头部*/

.head image {
  width: 100%;
  height: 192rpx;
  object-fit: cover;
}

/*地区年龄职位*/

.section {
  width: 100%;
}

.masterPersoninfo {
  width: 100%;
  height: 260rpx;
  padding: 54rpx 32rpx 46rpx 32rpx;
  display: flex;
  box-sizing: border-box;
}

.infoContent {
  width: 656rpx;
  height: 100%;
  display: flex;
  justify-content: flex-start;
  align-content: center;
  flex-wrap: wrap;
}

.contentTop {
  width: 656rpx;
  margin-bottom: 12rpx;
  display: flex;
  align-items: center;
}

.realName {
  font-size: 44rpx;
  color: rgba(51, 51, 51, 1);
  line-height: 62rpx;
  font-weight: bold;
  margin-right: 16rpx;
}

.masterAge {
  width: 44px;
  height: 20px;
  display: flex;
  justify-content: center;
  align-items: center;
  background: rgba(74, 108, 255, 0.11);
  border-radius: 10px;
  font-size: 26rpx;
  color: rgba(74, 108, 255, 1);
}

.genderImg {
  width: 10px;
  height: 10px;
  margin-right: 5rpx;
}

.contentMid,
.contentBottom {
  width: 656rpx;
  font-size: 30rpx;
  color: rgba(51, 51, 51, 1);
  line-height: 50rpx;
  font-weight: 400;
}

.bottomLine {
  width: 720rpx;
  height: 1px;
  margin-left: 32rpx;
  background: rgba(241, 241, 241, 1);
}

.edit {
  display: flex;
  align-items: center;
  justify-content: center;
}

.editImg {
  width: 15px;
  height: 16px;
}

.addImg {
  width: 40rpx;
  height: 36rpx;
}

/*简介*/

.profile,
.myCase {
  padding: 42rpx 32rpx 54rpx 32rpx;
  width: 100%;
}

.profileContent,
.myCasecontent {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.profileTitle,
.myCasetitle {
  width: 720rpx;
  text-align: left;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
  line-height: 24px;
  font-size: 34rpx;
}

.profileText {
  font-size: 30rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 42rpx;
}

/*案例*/

/* 服务案例 */
.activity {
  padding: 0 32rpx;
  padding-bottom: 30rpx;
  box-sizing: border-box;
  background-color: #fff;
  overflow: hidden;
}

.activity-info {
  margin-top: 30rpx;
  margin-bottom: 21rpx;
  overflow: hidden;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 3rpx 9rpx 0px rgba(0, 0, 0, 0.14);
  border-radius: 8rpx;
  padding-bottom: 20rpx;
}

.activity-info .img {
  height: 334rpx;
  background-color: rgba(216, 216, 216, 1);
  border-radius: 8px;
}

.activity-info .img image {
  height: 100%;
  width: 100%;
}

.activity-info .title {
  margin-top: 21rpx;
  font-size: 30rpx;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
  line-height: 42rpx;
}

.activity-info .area {
  margin-top: 4rpx;
  font-size: 26rpx;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 37rpx;
  display: flex;
  justify-content: space-between;
}

.activity-info .bottom {
  padding: 0 32rpx;
  box-sizing: border-box;
}

.activity-info .btn {
  margin-top: 4rpx;
  margin-bottom: 21rpx;
  display: flex;
  justify-content: space-between;
}

.btn-img {
  width: 160rpx;
  height: 54rpx;
}

.btn text {
  font-size: 28rpx;
  font-weight: bold;
  color: rgba(255, 94, 39, 1);
  line-height: 40rpx;
}