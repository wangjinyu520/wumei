.picture_list {
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
  align-items: flex-start;
}

.picture_item {
  position: relative;
  width: 48%;
  height: 230rpx;
  margin-bottom: 16rpx;
  border-radius: 12rpx;
  background-color: #ccc;
}

.continue {
  height: 382rpx;
  width: 100%;
  border-radius: 12rpx;
}

/* 
.picture_item:nth-child(2n-1) {
  margin-right: 16prx;
} */

.picture_item .del {
  position: absolute;
  top: 24rpx;
  right: 24rpx;
  width: 50rpx;
  height: 50rpx;
}

.picture_item image {
  width: 100%;
  height: 100%;
}
