/* subShopping/pages/caseDetail/caseDetail.wxss */

.swipers-box {
  width: 100%;
  height: 460rpx;
}

.swipers {
  width: 100%;
  height: 100%;
}

.swiper-items {
  width: 100%;
  height: 100%;
}

.swiper-items .img {
  width: 100%;
  height: 100%;
}

page {
  background-color: #fff;
  width: 100%;
  height: 100%;
}

.top {
  padding: 32rpx 32rpx;
  box-sizing: border-box;
  border-bottom: 2rpx solid rgba(241, 241, 241, 1);
}

.top.last {
  border-bottom: none;
}

.top-til {
  font-size: 44rpx;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
  line-height: 62rpx;
}

.line {
  height: 60rpx;
}

.top-img {
  margin-top: 20rpx;
  height: 46rpx;
  display: flex;
  align-items: center;
}

.top-img .img {
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  background-color: red;
  margin-right: 10rpx;
}

.text-grey {
  font-size: 30rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 36rpx;
}

.city-time {
  padding: 0 32rpx;
  box-sizing: '';
}

.line .text {
  font-size: 30rpx;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 42rpx;
}

.title {
  font-size: 30rpx;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 42rpx;
}

.line .text-grey {
  margin-left: 20rpx;
  font-size: 30rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 42rpx;
}

.cont {
  margin-top: 20rpx;
  font-size: 30rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 42rpx;
}
