/* pages/activity/activity.wxss */

page {
  background-color: #f9f9f9;
}

.container {
  min-height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center; /*竖轴的中心线对齐*/
  font-family: PingFangSC-Medium, PingFangSC;
}

/*搜索框*/

.search-bar {
  width: 100%;
  padding: 12px;
  box-sizing: border-box;
  background: #fff;
}

.search-left {
  width: 100%;
  display: flex;
  position: relative;
  justify-content: flex-start;
  align-items: center;
  height: 100rpx;
}

.search-icon {
  position: absolute;
  left: 280rpx;
}

.search-input {
  /* position: absolute; */
  height: 56rpx;
  width: 100%;
  background: #f2f2f2;
  border-radius: 28rpx;
  opacity: 0.2896;
}

input[placeholder] {
  font-size: 26rpx;
  color: #999;
  text-align: center;
  padding-left: 70rpx;
}

.search-right {
  width: 80rpx;
  height: 36rpx;
  font-size: 15px;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(0, 0, 0, 1);
  line-height: 18px;
  margin-left: 10px;
}

.search-text {
  display: flex;
  position: absolute;
  font-size: 30rpx;
  color: #000;
  margin: 26rpx 24rpx 0 0;
}

/*选择picker-bar*/

.icon-img {
  width: 12px;
  height: 10px;
}

/* fenlei */

.fenlei {
  height: 90rpx;
  line-height: 90rpx;
  border-bottom: 1rpx solid #e6e6e6;
  display: flex;
  align-items: center;
}

.fenlei text {
  font-size: 30rpx;
  color: #999;
  margin-left: 15rpx;
}

/* 下拉框 */

.select_box {
  background: #fff;
  width: 100%;
  /* margin: 0 auto; */
  height: 90rpx;
  line-height: 90rpx;
  text-align: left;
  position: relative;
}

.select {
  box-sizing: border-box;
  width: 100%;
  height: 86rpx;
  /* border: 1px solid #efefef; */
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
}

.select_text {
  font-size: 28rpx;
  flex: 1;
  color: rgb(102, 102, 102);
  line-height: 86rpx;
  height: 86rpx;
}

.select_img {
  width: 40rpx;
  height: 40rpx;
  display: block;
  transition: transform 0.3s;
}

.select_img_rotate {
  transform: rotate(180deg);
}

.option_box {
  position: absolute;
  top: 86rpx;
  width: 100%;
  /* border: 1px solid #efefef; */
  box-sizing: border-box;
  height: 0;
  overflow-y: auto;
  border-top: 0;
  background: #fff;
  transition: height 0.3s;
  z-index: 100;
}

.option {
  display: block;
  line-height: 40rpx;
  font-size: 28rpx;
  border-bottom: 1px solid #efefef;
  padding: 10rpx;
  color: rgb(102, 102, 102);
}

/* 我的活动 */
.my-activity {
  /* height: 300rpx; */
  background: #fff;
  margin-bottom: 20rpx;
  padding-bottom: 10px;
}

.act-top {
  display: flex;
}

.act-img {
  width: 35%;
  height: 176rpx;
  background: #d8d8d8;
  margin-left: 24rpx;
  margin-top: 28rpx;
}

.act-desc {
  width: 65%;
  margin-top: 32rpx;
  margin-left: 20rpx;
}

.act-tltle {
  font-size: 30rpx;
  color: #000;
  font-weight: Medium;
}

.act-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.content-left {
  display: flex;
  flex-direction: column;
}

.content-loc {
  margin-top: 14rpx;
  font-size: 26rpx;
  color: #666;
}

.content-time {
  margin-top: 26rpx;
  font-size: 22rpx;
  color: #666;
}

.content-right {
  text-align: right;
  
}

.content-price {
  margin-right: 16rpx;
  font-size: 26rpx;
  color: #ff2525;
}

.content-btn {
  width: 150rpx;
  height: 52rpx;
  margin-right: 16rpx;
  margin-top: 14rpx;
  background: #2184e3;
  font-size: 20rpx;
  color: #fff;
}

.content-btn>text {
  text-align: center;
  align-items: center;
}

.act-bottom {
  display: flex;
  font-size: 26rpx;
  color: #666;
  margin-top: 32rpx;
  margin-left: 24rpx;
}

.jion-price {
  margin-left: 24rpx;
}

.act-jion{
  margin-left: auto;
  margin-right: 18rpx;
  font-size: 24rpx;
  color: #2184E3;
}
.else{
  text-align: center;
  line-height: 40px;
  color: #666;
  font-size: 16px;
  padding:20px 0;
  margin-top:200px;
}
.tip{
  margin-top: 10px;
  text-align: center;
  color: #D8D8D8;
  font-size: 14px;
  padding-bottom:20px; 
}
