/* pages/search/search.wxss */

page {
  background-color: #fff;
}

.container {
  font-family: PingFangSC-Medium, PingFangSC;
}

.search-tab {
  width: 100vw;
  height: 92rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.search-input {
  width: 598rpx;
  height: 62rpx;
  background: rgba(245, 245, 245, 1);
  border-radius: 100rpx;
  position: relative;
}

.search-icon {
  position: absolute;
  left: 28rpx;
  top: 15rpx;
}

input[placeholder] {
  font-size: 24rpx;
  color: #000;
  text-align: left;
  padding-left: 70rpx;
  height: 62rpx;
}

.cancel {
  width: 66rpx;
  height: 42rpx;
  font-size: 30rpx;
  font-weight: bold;
  color: rgba(0, 0, 0, 1);
  line-height: 42rpx;
  letter-spacing: 2rpx;
}

.show {
  width: 690rpx;
  height: 100vh;
  margin-left: 30rpx;
}

.recent, .hot-search {
  width: 100%;
  height: 400rpx;
}

.recent-title, .hot-title {
  height: 80rpx;
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.recent-title>text, .hot-title>text {
  font-size: 30rpx;
  color: rgba(0, 0, 0, 1);
  line-height: 34rpx;
}

.recent-title>image {
  width: 30rpx;
  height: 32rpx;
}

.recent-show, .hot-show {
  display: flex;
  flex-wrap: wrap;
  height: 480rpx;
  justify-content: space-around;
  align-content: flex-start;
}

.single-recent, .single-hot {
  width: auto;
  height: 56rpx;
  background: rgba(245, 245, 245, 1);
  border-radius: 8rpx;
  margin-top: 20rpx;
}

.single-recent>text, .single-hot>text {
  font-size: 26rpx;
  font-weight: lighter;
  color: rgba(153, 153, 153, 1);
  line-height: 36rpx;
  padding: 5px 14px 5px 13px;
}

.my-activity {
  /* height: 300rpx; */
  background: #fff;
  margin-bottom: 20rpx;
  padding-bottom: 10px;
}

.act-top {
  display: flex;
}

.act-img {
  width: 35%;
  height: 176rpx;
  background: #d8d8d8;
  margin-left: 24rpx;
  margin-top: 28rpx;
}

.act-desc {
  width: 65%;
  margin-top: 32rpx;
  margin-left: 20rpx;
}

.act-tltle {
  font-size: 30rpx;
  color: #000;
  font-weight: Medium;
}

.act-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.content-left {
  display: flex;
  flex-direction: column;
}

.content-loc {
  margin-top: 14rpx;
  font-size: 26rpx;
  color: #666;
}

.content-time {
  margin-top: 26rpx;
  font-size: 22rpx;
  color: #666;
}
.content-time1{
   margin-top: 40rpx;
  font-size: 22rpx;
  color: #666;
}

.content-right {
  text-align: right;
}

.content-price {
  margin-right: 16rpx;
  font-size: 26rpx;
  color: #ff2525;
}

.content-btn {
  width: 150rpx;
  height: 52rpx;
  margin-right: 16rpx;
  margin-top: 14rpx;
  background: #2184e3;
  font-size: 20rpx;
  color: #fff;
}
.content-btn1 {
  width: 150rpx;
  height: 52rpx;
  margin-right: 16rpx;
  margin-top: 90rpx;
  background: #2184e3;
  font-size: 20rpx;
  color: #fff;
}
.content-btn>text {
  text-align: center;
  align-items: center;
}

.act-bottom {
  display: flex;
  font-size: 26rpx;
  color: #666;
  margin-top: 32rpx;
  margin-left: 24rpx;
}

.jion-price {
  margin-left: 24rpx;
}

.act-jion {
  margin-left: auto;
  margin-right: 18rpx;
  font-size: 24rpx;
  color: #2184e3;
}

.else {
  text-align: center;
  line-height: 40px;
  color: #666;
  font-size: 16px;
  padding: 20px 0;
  margin-top: 200px;
}

.tip {
  text-align: center;
  color: #d8d8d8;
  font-size: 14px;
  padding-bottom: 20px;
}

