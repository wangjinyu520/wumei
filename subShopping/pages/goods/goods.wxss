/* pages/goods/goods.wxss */
page{
  background: #F9F9F9;
  width: 100%;
  height: 100%;
}
page>view{
  width: 100%;
  height: 100%;
}

.swiper{
  background: #FFFFFF;
}
.swiper-item image{
  width: 100%;
}

.content{
  background: #FFFFFF;
  height: 274rpx;
}
.goods-title{
  font-size: 30rpx;
  color: #000000;
  padding: 32rpx 24rpx 0 28rpx;
   text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}
.goods-price{
  font-size: 32rpx;
  color: #FF2525;
  padding: 20rpx 0 0 28rpx;
}

.goods-price>text{
  font-size: 36rpx;
}

.goods-desc{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 36rpx 28rpx;
  font-size: 24rpx;
  color: #999990;
}

