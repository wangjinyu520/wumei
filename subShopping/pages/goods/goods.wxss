/*显示整个conts */  
.show{   
  display: block;  
  }  
/*隐藏整个conts */  
.hide{   
  display: none;  
  }  
  
/*关闭按钮（关闭整个conts） */  
.closeImg{   
  width: 40rpx;   
  height: 40rpx;   
  float: right;   
  position: relative;   
  top: 540rpx;   
  left: -10rpx;   
  background-color: white;   
  border-radius: 50%;  
  } 

