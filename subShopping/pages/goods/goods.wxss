/*遮罩层 */  
.shade{   
  width:100%;   
  height:100%; 
  left: 0;  
  bottom: 0;  
  background:rgba(0,0,0,0.5);   
  overflow: hidden;   
  /*要显示在wrap的上面 */   
  z-index: 99;   
  position: fixed;  
  }   
  
