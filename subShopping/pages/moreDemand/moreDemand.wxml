        发布需求
        <!-- <image class="img" src="/assets/common/publish.png" bindtap="toPublish" /> -->
      </view>
    </view>
  </view>

  <view class="nav">
    <view class="nav-son {{shownavindex == 1? 'active' : ''}}" bindtap="listqy" data-nav="1">
      <view class="content">地区</view>
      <view class="icon"></view>
    </view>
