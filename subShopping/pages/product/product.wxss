/* pages/product/product.wxss */
@import "../../wxParse/wxParse.wxss";

page{
  background: #F9F9F9;
}
.page{
  background-color: red;
}
.swiper{
  width: 100%;
  height: 200px;
}
.swiper-item{
  width: 100%;
  height: 100%;
}
 .swiper-item image{
  width: 100%;
  height: 100%!important;
}
.product{
  margin-top: 4rpx;
  height: 140rpx;
  background: #FFFFFF;
}
.title{
  padding: 26rpx 0 0 24rpx;
  font-size: 30rpx;
  color: #000000;
}
.price{
  display: flex;
  margin-left: 24rpx;
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #000000;
}
.rent{
  font-size: 32rpx;
  color: #FF2525;
}

.unit{
  font-size: 28rpx;
  color: #FF2525;
}

.location{
  margin: 2rpx;
  height: 90rpx;
  background: #FFFFFF;
  padding-top: 32rpx;
}
.location>text{
  font-size: 26rpx;
  color: #666666;
  margin-left: 20rpx;
}

.desc-title{
  height: 86rpx;
  display: flex;
  justify-content: center;
  line-height: 86rpx;
  font-size: 28rpx;
  color: #999999;
}

.desc{
  background: #FFFFFF;
  padding: 0 12px;
  box-sizing: border-box;
  padding-bottom: 50px;
  overflow: hidden;
}
.rich_img{
  width: 100%!important;
  height: 100%;
}

/**/
.bottom{
  width: 100%;
  border-top: 1px solid #E6E6E6;
  position: fixed;
  bottom: 0;
  left: 0;
  margin-top: 26rpx;
  background: #FFFFFF;
  display: flex;
  justify-content: space-between;

}


.check{
  width: 224rpx;
  font-size: 26rpx;
  color: #676767;
  text-align: center;
  margin-top: 20rpx;
}
.check-img{
  width: 42rpx;
  height: 42rpx;
  margin-left: 4rpx;
}

.cut{
  border: 1px solid #E6E6E6;
  margin-top: 22rpx;
  margin-bottom: 22rpx;
}


.collect{
  height: 100rpx;
  width: 224rpx;
  font-size: 26rpx;
  color: #676767;
  text-align: center;
  margin-top: 20rpx;
}
.collect-img{
  width: 42rpx;
  height: 42rpx;
  margin-left: 4rpx;
}



button{
  margin: 0;
  padding: 0;
}

.chat{
  margin-left: auto;
  width: 252rpx;
  height: 80rpx;
  line-height: 80rpx;
  margin-top: 20rpx;
  margin-right: 20rpx;
  background: #2184E3;
  font-size: 28rpx;
  color: #FFFFFF;
  border-radius: 12rpx;
}

/*弹框*/
.mask{
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    z-index: 9000;
    opacity: 0.7;
}

.modalDlg{
    width: 580rpx;
    height: 620rpx;
    position: fixed;
    top: 50%;
    left: 0;
    z-index: 9999;
    margin: -370rpx 85rpx;
    background-color: #fff;
    border-radius: 36rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}


.mask-content{
  margin-top: 200rpx;
  font-size: 30rpx;
  color: #000000;
}

.msk-btn{
  width: 200rpx;
  height: 80rpx;
  margin-top: 50rpx;
  background: #2184E3;
  font-size: 30rpx;
  color: #FFFFFF;
}
.rich_p {
  width: 100%;
  font-size: 14px;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgb(56, 58, 61);
  line-height: 28px;
  padding-bottom: 5px; 
}



