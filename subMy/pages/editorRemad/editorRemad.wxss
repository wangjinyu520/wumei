/* subShopping/editorRemad/editorRemad.wxss */
/* pages/publish/publish.wxss */
@import "/assets/iconfont.wxss";

page {
  background-color: #fff;
}

.home-page {
  height: 160rpx;
  width: 100%;
  border: 1rpx solid red;
  font-size: 60rpx;
}

.return {
  position: absolute;
  top: -20px;
  left: 20px;
  width: 47px;
  height: 47px;
  background-color: red;
}

.picture {
  height: 221px;
  display: flex;
}

/*每张图片所占容器*/

.item-ot {
  margin: 0 auto;
  width: 100%;
  height: 100%;
}

.item {
  position: relative;
  margin: 16px auto;
  width: 240px;
  height: 160px;
  background: #f9f9f9;
  border: 1px solid #e7e7e7;
}

.itemImg {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  overflow: hidden;
  z-index: 1;
}

.itemImg image {
  width: 100%;
  height: 100%;
}

/*add按钮*/

.addIcon {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  text-align: center;
  line-height: 160px;
  font-size: 80rpx;
  background: #fff;
  color: #999;
  z-index: 2;
}

/*主题*/

.topic {
  height: 50px;
  border-top: 1px solid #eee;
  display: flex;
  background-color: #fff;
  align-items: center;
  font-size: 30rpx;
}

.cu-form-group-title {
  width: 30%;
}

.cu-form-group picker .picker {
  text-align: left;
}

.title {
  margin-left: 12px;
}

.null {
  height: 16rpx;
}

.topic input {
  /*background-color: red;*/
  text-align: left;
  width: 60%;
}

/*开始时间*/

picker {
  margin-right: 12px;
  color: #a7a7a7;
}

/*模块，联系人，需求*/

.midBlock, .contact, .required {
  background-color: #fff;
}

.required {
  padding-bottom: 34rpx;
}

/*费用*/

.set {
  margin-left: auto;
  color: #222;
  margin-right: 14px;
}

.set text {
  color: #a7a7a7;
}

.icon-set {
  width: 8px;
  height: 14px;
  margin-right: 10px;
}

/*地点*/

.locale {
  height: 50px;
  border-top: 1px solid #eee;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 30rpx;
}

.contact>.locale {
  display: flex;
  justify-content: flex-start;
}

.contact>.locale>.locale-input {
  margin-left: 20px;
}

.locale-title {
  width: 30%;
  margin-left: 14px;
}

.locale-input {
  /*background-color: red;*/
  text-align: left;
  width: 60%;
}

/*需求描述*/

.required {
  display: flex;
  justify-content: space-between;
  /* min-height: 240px; */
}

.required-title {
  width: 30%;
  padding-left: 30rpx;
  box-sizing: border-box;
  line-height: 100rpx;
}

.required-body {
  width: 75%;
}

.textarea {
  padding: 40rpx 20rpx;
  box-sizing: border-box;
  max-width: 100%;
  /* height: 57.14%; */
}

.uploadImg {
  width: 100%;
}

/*图上传*/

.picture_list {
  padding-left: 20rpx;
  width: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-items: flex-start;
  align-content: flex-start;
}

.picture_item {
  position: relative;
  width: 82px;
  height: 82px;
  margin: 20rpx;
}

.picture_item .del {
  position: absolute;
  top: -11rpx;
  right: -11rpx;
  color: #fff;
  border-radius: 50%;
  width: 40rpx;
  height: 40rpx;
  z-index: 2;
  line-height: 35rpx;
  text-align: center;
  background-color: #f00;
}

.picture_item image {
  width: 100%;
  height: 100%;
}

/*提交*/

.btn-box {
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  padding: 0 32rpx;
  box-sizing: border-box;
  height: 88rpx;
  border-radius: 8px;
}

.pub-btn {
  color: #fff;
  box-sizing: border-box;
  height: 88rpx;
  background: linear-gradient(270deg, rgba(74, 108, 255, 1) 0%, rgba(35, 218, 255, 1) 100%);
  border-radius: 44rpx;
}

.pub-btn-false {
  color: #fff;
  box-sizing: border-box;
  height: 88rpx;
  background: rgba(216, 216, 216, 1);
  border-radius: 44rpx;
}
