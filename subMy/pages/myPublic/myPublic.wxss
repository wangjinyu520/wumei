/* subMy/pages/myPublic/myPublic.wxss */

/* 列表内容开始 */

.content {
  width: 100%;
}

.content-item {
  background: rgba(255, 255, 255, 1);
  border-radius: 8rpx;
  margin: 0 32rpx;
  margin-top: 32rpx;
  border-bottom: 2rpx solid #efefef;
  padding: 32rpx;
  box-sizing: border-box;
}

.title {
  margin: 20rpx 0;
  font-size: 32rpx;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
  line-height: 45rpx;
}

.content-item .text {
  margin: 0 0 10rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  line-height: 40rpx;
}

.btn {
  margin-top: 20rpx;
  width: 100%;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.cu-modal.show {
  background: rgba(0, 0, 0, 0.3);
}

.btn-active {
  width: 50%;
  font-size: 30rpx;
  font-weight: bold;
  color: rgba(255, 57, 57, 1);
  line-height: 42rpx;
  height: 80rpx;
}

.dialog-box {
  padding: 50rpx 150rpx;
}

.dialog-box .tit {
  font-size: 34rpx;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
  line-height: 80rpx;
}

.btn-default {

  height: 80rpx;
  width: 50%;
  font-size: 30rpx;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
  line-height: 42rpx;
  border-left: 1px solid #fff;
}

.btn-item {
  width: 120rpx;
  height: 54rpx;
  margin-left: 40rpx;
  border-radius: 27rpx;
  border: 2rpx solid rgba(219, 219, 219, 1);
  text-align: center;
  line-height: 54rpx;
  font-size: 27rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
}

.share {
  padding: 0;
  margin-right: 0;
  background-color: #fff;
}

button:after {
  border: none;
}

.btn-img {
  border: 1px solid rgba(255, 94, 39, 1);
  background-color: #fff;
  color: #ff5e27;
}

.price {
  display: flex;
  align-items: baseline;
}
.else{
  top: 0;
}
.price .rent {
  font-size: 40rpx;
  font-weight: bold;
  color: rgba(255, 94, 39, 1);
  line-height: 40rpx;
}

.price .unit {
  color: rgba(255, 94, 39, 1);
  font-size: 30rpx;
  line-height: 34rpx;
  font-weight: 600;
}
