/* subShopping/pages/advice/advice.wxss */

.toolbar {
  position: absolute;
  bottom: 13px;
  left: 13px;
  width: 164rpx;
  height: 164rpx;
}

.toolbar image {
  width: 100%;
  height: 100%;
}

editor {
  padding: 15px 12px 20px;
  height: 100px;
  font-size: 14px;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(167, 167, 167, 1);
  line-height: 27px;
}

.uploader {
  position: relative;
  height: 630rpx;
  width: calc(100% - 24px);
  background: #f7f7f7;
  margin: 12px;
  border-radius: 8rpx;
}

.desc {
  padding-left: 22rpx;
  padding-top: 26rpx;
  font-size: 24rpx;
  color: #a7a7a2;
}

.btn {
  width: calc(100% - 24px);
  height: 146rpx;
  margin: 0 12px;
  margin-top: 60rpx;

}

.rbtn {
  height: 100rpx;
  background-color: #2184e3;
  border-radius: 8px;
}

.rbtn>text {
  text-align: center;
  align-items: center;
  font-size: 15px;
  color: #fff;
}