.content {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: space-between;
  overflow: hidden;
}

.price {
  /* margin: 94rpx 0 0 72rpx; */
  font-size: 30rpx;
  color: #2184e3;
  height: 100%;
  padding: 30px 15px 30px 22px;
  box-sizing: border-box;
}
.shop{
  width: 210px;
  overflow: hidden;
}

.price text {
  font-size: 50rpx;
}

.cut {
  height: calc(100% - 12px);
  width: 1px;
  background-color: #ebebeb;
  margin: 12px 0;
}

.title {
  margin-top: 13px;
  margin-left: 24rpx;
  display: flex;
}

.title-img {
  width: 48rpx;
  height: 48rpx;
  background: #e5e5e5;
  margin: 60rpx 0 0 0rpx;
  margin-top: 0px;
  border-radius:3px;
}

.title-nav {
  font-size: 26rpx;
  caption-side: #000;
  margin: 64rpx 0 0 10rpx;
  margin-top: 0px;

}

.use {
  margin: 16rpx 0 0 24rpx;
  font-size: 26rpx;
  color: #999;
}

.time {
  margin-left: 24rpx;
  font-size: 26rpx;
  color: #999;
}

.or-use {
  display: flex;
  align-items: center;
  width: 46px;
