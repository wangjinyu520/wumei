<!--pages/buyticket/buyticket.wxml-->
<view class="buyticket">

  <view class="input">
    <view class="name">
      <text class="text">姓名</text>
      <input class="frame active" type="text" placeholder="请输入" placeholder-class="place-holder" style="text-align: right;"></input>
    </view>

    <view class="name">
      <text class="text">手机号</text>
      <input class="frame active" type="number" placeholder="请输入" placeholder-class="place-holder" style="text-align: right;"></input>
    </view>

    <view class="name">
      <text class="text">年龄</text>
      <input class="frame active" type="text" placeholder="请输入" placeholder-class="place-holder" style="text-align: right;"></input>
    </view>

    <view class="name">
      <text class="text">邮箱</text>
      <input class="frame active" type="text" placeholder="请输入" placeholder-class="place-holder" style="text-align: right;"></input>
    </view>
  </view>

  <view class="next" bindtap="toConfirm">
    <button class="next-btn"><text>下一步</text></button>
  </view>

</view>
