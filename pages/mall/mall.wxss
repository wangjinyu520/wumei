/* pages/mall/mall.wxss */

page {
  background: #f9f9f9;
}

.background {
  position: absolute;
  z-index: -1;
  width: 100vw;
  height: 338rpx;
}

.buss {
  border-top: 8rpx solid #eee;
}

.bTitle {
  font-size: 36rpx;
  margin-left: 30rpx;
  margin-top: 10rpx;
}

.goods {
  border-top: 8rpx solid #eee;
  display: flex;
}

.gTitle {
  font-size: 36rpx;
  margin-left: 30rpx;
  margin-top: 10rpx;
}

.goods-item {
  flex-wrap: wrap;
  width: 46%;
}

/*搜索框*/

.search {
  display: flex;
  width: 100%;
  padding: 0 12px;
  box-sizing: border-box;
  justify-content: space-between;
  align-items: center;
  position: relative;
  z-index: 999;
  margin-bottom: 10px;
}

.search-left {
  width:90%;
  display: flex;
  position: relative;
  justify-content: flex-start;
  align-items: center;
  height: 100rpx;
}

.search-icon {
  position: absolute;
  left: 250rpx;
}

.search-input {
  height: 56rpx;
  width: 100%;
  background: #f2f2f2;
  border-radius: 28rpx;
  opacity: 0.2896;
}

input[placeholder] {
  font-size: 28rpx;
  color: #999;
  text-align: center;
  /* padding-left: 80rpx; */
}

.cartright {
  width: 5%;
  margin-right: 10px;
}

.img {
  width: 25px;
  height: 25px;
}

/*icon*/

.icons {
  background: #fff;
  width: 100%;
  padding: 20rpx 24rpx;
  padding-bottom:10px;
  margin-top: 10rpx;
  box-sizing: border-box;
}

.icon-classify {
  height: 300rpx;
  width: 652rpx;
}

.icon-icon {
  width: 60rpx;
  height: 60rpx;
}

.text {
  height: 36rpx;
  font-size: 26rpx;
  font-weight: lighter;
  color: #666;
  line-height: 36rpx;
  margin-top: 10rpx;
}

.icon-top {
  width:100%;
  height: 150rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.icon-bottom {
  width:50%;
  height: 150rpx;
  display: flex;
  justify-content:flex-start;
  align-items: center;
}

.icon-item {
  width: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

/*厂家推荐*/

.factory {
  background: #fff;
  margin-top: 20rpx;
  width: 100%;
  height: 176px;
  display: flex;
  align-content: flex-start;
  flex-wrap: wrap;
}

.factory-tab {
  width: 750rpx;
  height: 92rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #f9f9f9;
}

.factory-title {
  margin-left: 28rpx;
  font-size: 32rpx;
  line-height: 44rpx;
  color: #000;
  font-weight: Medium;
}

.more {
  width: 80rpx;
  height: 32rpx;
  margin-right: 22rpx;
  display: flex;
  justify-content: space-between;
}

.more>text {
  font-size: 26rpx;
  font-weight: 400;
  color: #999;
  line-height: 36rpx;
}

.icon-more {
  width: 12rpx;
  height: 24rpx;
  padding-top: 8rpx;
}

.factory-list {
  width: 100%;
  /* background-color: red; */
  display: flex;
  justify-content:flex-start;
  align-content: center;
  flex-wrap: wrap;
  padding: 12px;
  box-sizing: border-box;
}
.factory-item{
  margin: 2px;
  box-sizing: border-box;
  width: 83px;
  height: 48px;
  border:1px solid rgba(244,244,244,1);
  border-radius:4px;
}

/*好货推荐*/

.goods {
  background: #fff;
  margin-top: 20rpx;
  width: 100%;
  display: flex;
  align-content: flex-start;
  flex-wrap: wrap;
}

.goods-tab {
  width: 750rpx;
  height: 46px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #f9f9f9;
}

.goods-title {
  margin-left: 28rpx;
  font-size: 32rpx;
  line-height: 44rpx;
  color: #000;
  font-weight: Medium;
}

.goods-list {
  width: 100%;
  overflow: hidden;
}

.goods-content {
  height: 232rpx;
  display: flex;
  border-bottom: 1px solid #efefef;
}

.goods-img {
  width: 256rpx;
  height: 176rpx;
  border-radius: 4px;
  margin: 30rpx 0 0 26rpx;
  background: #d8d8d8;
}

.goods-desc {
  margin-top: 34rpx;
  margin-left: 20rpx;
}

.goods-name {
  margin-top: 8rpx;
  font-size: 30rpx;
  color: #000;
}

.goods-price {
  margin-top: 38rpx;
  font-size: 28rpx;
  color: #ff2525;
}

.goods-shop {
  font-size: 24rpx;
  color: #999990;
  margin-top: 10rpx;
}

