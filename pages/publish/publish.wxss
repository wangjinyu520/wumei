/*报名咨询*/

.advice {
  height: 50px;
  border-top: 1px solid #eee;
  display: flex;
  align-items: center;
  font-size: 30rpx;
}

.advice-title {
  margin-left: 12px;
}

.advice input {
  margin-left: auto;
  text-align: right;
  margin-right: 12px;
}

.refund {
  position: relative;
  height: 50px;
  border-top: 1px solid #eee;
  display: flex;
  align-items: center;
  font-size: 30rpx;
}

.refund-title {
  margin-left: 12px;
}

.refund-msg {
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 10rpx;
  margin-left: auto;
  margin-right: 12px;
