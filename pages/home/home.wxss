/* pages/home/home.wxss */
page{
  background: #F9F9F9;
}

/*背景图*/
.background{
  position:absolute;
	z-index:-1;
	width: 100vw;
	height: 338rpx;	
}

/*搜索框*/
.search{
  display: inline-flex;
  width: 100vw;
  justify-content: space-between;
  position: relative;
  z-index: 999;
}

.search-left {
  display: flex;
  position: relative;
  justify-content: flex-start;
  align-items: center;
  height: 100rpx;
  background-color: #FFFFFF;
}

.search-icon {
  position: absolute;
  left: 300rpx;
}

.search-input {
  position: absolute;
  height: 56rpx;
  width: 568rpx;
  left: 24rpx;
  background: #F2F2F2;
  border-radius: 28rpx;
  opacity: 0.2896;
}

input[placeholder] {
  font-size: 28rpx;
  color: #999999;
  text-align: center;
  padding-left: 70rpx;

}

.topub{
  height: 54rpx;
  margin-top: 2px;
}
.topub .img{
  justify-content: flex-end;
  width: 50rpx;
  height: 50rpx;
  margin: 20rpx;
}

/*数据展示*/
/*icon*/
.icons {
  background: #FFFFFF;
  height: 300rpx;
  padding: 20rpx 10rpx;
  padding-bottom: 0;
  margin-top: 10rpx;
}

.icon-classify{
	height: 300rpx;
	width: 100%;
}
.icon-icon{
width:90rpx;
height:90rpx;
}
.text{
height:36rpx;
font-size:26rpx;
font-weight:lighter;
color:#666666;
line-height:36rpx;
margin-top:10rpx; 
}
.icon-top{
	width: 652rpx;
	height: 150rpx;
	display: flex;
	justify-content: space-between;
	align-items: center;
  margin-left: 40rpx;
}
.icon-bottom{
	width: 460rpx;
	height: 150rpx;
	display: flex;
  justify-content: space-between;
	align-items: center;
  margin-left: 40rpx;
}
.icon-item{
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
}


/*热门大师*/
.master{
  background: #FFFFFF;
  width: 100%;
  height: 600rpx;
  display: flex;
	align-content:flex-start;
	flex-wrap: wrap;
  margin-top: 20rpx;
}
.master-tab{
  width: 750rpx;
  height: 92rpx;
	display: flex;
	justify-content: space-between;
	align-items: center;
  border-bottom: 1px solid #F9F9F9;
}
.master-title{
  margin-left: 28rpx;
  font-size: 32rpx;
	line-height: 44rpx;
  color: #000000;
  font-weight: 500;
}
.more{
  width: 124rpx;
	height: 32rpx;
	margin-right: 22rpx;
	display: flex;
	justify-content: space-between;
}
.more>text{
	font-size: 26rpx;
	font-weight: 400;
	color:#999999;
  line-height:36rpx;
}
.icon-more{
	width: 12rpx;
	height: 24rpx;
  padding-top: 8rpx;
  padding-right: 40rpx;
}

