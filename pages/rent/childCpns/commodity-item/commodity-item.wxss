/* pages/rent/childCpns/commodity-item/commodity-item.wxss */

.commodity-item {
  display: flex;
  align-items: center;
  margin-left: 13px;
  margin-right: 12px;
  border-bottom: 1px solid #efefef;
  padding: 15px 0;
}

.commodity-item .image {
  width: 37%;
  height: 88px;
  background: rgba(216, 216, 216, 1);
  border-radius: 4px;
}

.desc-info {
  width: 60%;
  margin-left: 10px;
  margin-top: 4px;
}

.desc-info .name {
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(0, 0, 0, 1);
  line-height: 19px;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}

.desc-info .company {
  font-size: 26rpx;
  color: #666;
  margin-top: 7px;
}

.price .rent {
  font-size: 24rpx;
  color: #ff2525;
  margin-top: 4px;
}

.price .unit {
  font-size: 20rpx;
  color: #ff2525;
}
