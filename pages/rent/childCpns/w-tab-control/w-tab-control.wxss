/* components/w-tab-control/w-tab-control.wxss */
.tab-control {
  display: flex;
  margin-bottom: 16rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  font-weight: Medium;
}

.active {
  color: #2184E3;
}

.tab-item.active text {
  padding: 16rpx 10rpx;
}
