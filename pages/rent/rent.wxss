/* 下拉筛选框 */

page {
  width: 100%;
}

.page {
  font-family: 'PingFang SC',
                 'Helvetica Neue',
                 Helvetica,
                 'Droid Sans Fallback',
                 'Microsoft Yahei',
                 sans-serif;
  background: #fff;
  overflow: hidden;
}

/* search部分开始 */

.map .text image {
  margin-left: 10rpx;
  width: 22rpx;
  height: 13rpx;
}

.map.text text {
  width: 64rpx;
  height: 45rpx;
  font-size: 32rpx;
  font-family: PingFang-SC-Bold, PingFang-SC;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
  line-height: 45rpx;
}

.map-item {
  padding: 0 64rpx;
  box-sizing: border-box;
  line-height: 60rpx;
  height: 60rpx;
}

.search-box {
  position: relative;
  z-index: 999;
  height: 110rpx;
  background-color: #fff;
  width: 100%;
}

.search {
  position: relative;
  top: 20rpx;
  z-index: 999;
  padding: 0 32rpx;
  box-sizing: border-box;
  height: 64rpx;
  line-height: 64rpx;
  width: 100%;
  display: flex;
  justify-content: space-between;
  background-color: #fff;
}

.search-left {
  position: relative;
  width: 70%;
  height: 64rpx;
  line-height: 64rpx;
  background: rgba(245, 245, 245, 1);
  border-radius: 32rpx;
}

.search-left .img {
  width: 25rpx;
  height: 27rpx;
  position: absolute;
  left: 33rpx;
  top: 50%;
  transform: translateY(-50%);
}

.search-input {
  width: 100%;
  height: 64rpx;
}

.search-input[placeholder] {
  padding-left: 70rpx;
}

.topub {
  height: 64rpx;
  width: 146rpx;
  background: rgba(74, 108, 255, 0.1);
  border-radius: 32rpx;
  font-size: 26rpx;
  font-weight: bold;
  color: rgba(74, 108, 255, 1);
  line-height: 64rpx;
  text-align: center;
}

.nav {
  position: relative;
  top: 0rpx;
  z-index: 99;
  padding: 0 32rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: flex-end;
  border-bottom: 1rpx solid #f4f4f4;
  border-top: 1rpx solid #f4f4f4;
  background: #fff;
}

.nav-son {
  margin-left: 70rpx;
  display: flex;
  /* flex: 1; */
  text-align: center;
  height: 80rpx;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
}

.borders {
  border-left: 1rpx solid #f4f4f4;
  border-right: 1rpx solid #f4f4f4;
}

.content1 {
  display: inline-block;
  font-size: 32rpx;
  color: #666;
}

.icon {
  display: inline-block;
  border: 10rpx solid transparent;
  border-top: 10rpx solid #666;
  margin-left: 10rpx;
  margin-top: 10rpx;
}

.temp {
  position: absolute;
  width: 100%;
  z-index: 24;
  background: #fff;
}
.temp1 {
  display: none;
  width: 100%;
  max-height: 550rpx;
  overflow-y: scroll;
  line-height: 100rpx;
}

.temp2 {
  display: none;
  width: 100%;
  max-height: 750rpx;
  overflow-y: scroll;
  line-height: 100rpx;
  background: #fff;
}

.slidedown {
  transform: translateY(0%);
}

.temp view {
  /* border-bottom: 1rpx solid #d1d3d4; */
  font-size: 28rpx;
  color: #666;
}

.pxTable {
  padding-left: 32rpx;
  box-sizing: border-box;
  text-align: left;
}
.quyu {
  top: 110rpx;
  width: 100%;
  position: absolute;
  /* 区域的筛选：默认状态下不显示 */
  display: none;
  height: 800rpx;
  z-index:9999;
}
.quyu .qy {
  overflow-y: scroll;
  float: left;
  width: 100%;
  /* height: 450rpx; */
  height: 100%;
  line-height: 80rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #717273;
  /* border-right: 1rpx solid #f4f4f4; */
}

.qy view {
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  padding-left: 45rpx;
  /* border-bottom: 1rpx solid #f4f4f4; */
}
.quyu-left {
  background: #fff;
}

.quyu-center {
  background: rgba(249, 249, 249, 1);
}

.quyu-right {
  background: rgba(249, 249, 249, 1);
}

.quyu-right view {
  display: flex;
  align-items: center;
}

.quyu-right image {
  width: 34rpx;
  height: 34rpx;
  margin-left: 30rpx;
}

.current {
  position: relative;
  /* background: #e0e0e0; */
  color: #4a6cff;
  background: rgba(249, 249, 249, 1);
}

.current:after {
  content: '';
  display: block;
  position: absolute;
  left: 0;
  top: 0;
  background-color: #4a6cff;
  height: 100%;
  width: 6rpx;
}

.current2 {
  /* background: #fff; */
  color: #4a6cff;
}

.current3 {
  /* background: #fff; */
  color: #4a6cff;
}
.fullbg {
  position: fixed;
  top: 132rpx;
  z-index: 22;
  width: 100%;
  height: 100%;
  background: rgba(1, 1,1 ,.5);
  transition: all 1s;
  display: none;
}

.fullopacity {
  display: block;
}

.nav-son.active .content {
  color: #4a6cff;
}

.nav-son.active .icon {
  border: 10rpx solid transparent;
  border-top: 10rpx solid #4a6cff;
}

@keyframes slidown {
  from {
    transform: translateY(-100%);
  }

  to {
    transform: translateY(0%);
  }
}

.slidown {
  display: block;
  animation: slidown 0.7s ease-in both;
}

@keyframes slidup {
  from {
    transform: translateY(0%);
  }

  to {
    transform: translateY(-100%);
  }
}

.slidup {
  display: block;
  animation: slidup 0.7s ease-in both;
}

.disappear {
  display: none;
}

button::after {
  border: none;
}

button {
  background-color: red;
  width: 50%;
  border-radius: 0;
  font-size: 24rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.form-btn {
  width: 100%;
  display: flex;
  height: 98rpx;
}

.btn-reset {
  background-color: #f9f9f9;
}

.btn-submit {
  background-color: #4a6cff;
  color: #fff;
}

.sliderHView {
  margin: 0 40rpx 0 40rpx;
  height: 250rpx;
  width: 70%;
  margin: auto;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  background-color: #fff;
}

.valueSty {
  font-size: 30rpx;
  text-align: center;
  color: #999;
  margin-top: 15rpx;
}

.showMoney text {
  margin-right: 30rpx;
}

.twoSlider {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.contentCenter {
  text-align: center;
}

.current4 {
  /* background: #fff; */
  color: #4a6cff !important;
}

/* 列表内容开始 */

.content {
  width: 100%;
}

.content-item {
  margin: 0 32rpx;
  margin-top: 32rpx;
  border-bottom: 2rpx solid #efefef;
}

.title {
  margin: 20rpx 0;
  font-size: 32rpx;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
  line-height: 45rpx;
}

.content-item .text {
  margin: 0 0 10rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  line-height: 40rpx;
}

.btn {
  margin-top: 20rpx;
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

.btn-img {

  width: 104rpx;
  height: 54rpx;
  line-height: 54rpx;
  text-align: center;
  border-radius: 4rpx;
  border: 1px solid rgba(255, 94, 39, 1);
  background-color: #fff;
  color: #ff5e27;
}

.price {
  display: flex;
  align-items: baseline;
}

.price .rent {
  font-size: 40rpx;
  font-weight: bold;
  color: rgba(255, 94, 39, 1);
  line-height: 40rpx;
}

.price .unit {
  color: rgba(255, 94, 39, 1);
  font-size: 30rpx;
  line-height: 34rpx;
  font-weight: 600;
}
