/* pages/profile/profile.wxss */

.store {
  height: 100rpx;
  line-height: 100rpx;
  font-size: 32rpx;
  margin-left: 10px;
  align-items: center;
  
}

.store-img {
  width: 20px;
  height: 20px;
  vertical-align: middle;
}

.store text {
  vertical-align: middle;
  margin-left: 9px;
}

.store .more {
  float: right;
  width: 8px;
  height: 14px;
  text-align: center;
  margin-top: 18px;
}

/*背景图*/

.background {
  position: absolute;
  z-index: -1;
  width: 100vw;
  height: 338rpx;
}

/*header*/

.header {
  position: relative;
  display: flex;
  height: 170rpx;
  padding: 12rpx 30rpx;
  color: #fff;
}

.avatar {
  position: relative;
  margin-top: 18rpx;
  width: 64px;
  height: 64px;
  border-radius: 5px;
  background: #f2f2f2;
  vertical-align: middle;
  overflow: hidden;
}

.user-avatar {
  width: 100%;
  height: 100%;
  border-radius: 5px;
}

.avatar image {
  width: 64px;
  height: 64px;
  border-radius: 5px;
  vertical-align: middle;
}

.login-info {
  vertical-align: middle;
  margin-left: 30rpx;
}

.login-info .login {
  font-size: 36rpx;
  margin-top: 18rpx;
}

.login-info .phone {
  position: relative;
  font-size: 28rpx;
  margin-top: 10rpx;
  height: 20px;
}

.finnishInfo {
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: 99;
  top: 0;
  left: 0;
  opacity: 0;
}

.phone image {
  width: 36rpx;
  height: 36rpx;
  vertical-align: middle;
  position: relative;
  bottom: 4rpx;
}

.arrow {
  position: absolute;
  right: 30rpx;
  margin-top: 30rpx;
}

.arrow image {
  width: 60rpx;
  height: 60rpx;
}

.change {
  width: 87px;
  height: 22px;
  background: #fff;
  border-radius: 12px;
  display: flex;
  flex-flow: nowrap;
  margin-top: 5px;
}

.change-img {
  width: 11px;
  height: 10px;
  margin-top: 6px;
  margin-left: 9px;
}

.change-desc {
  font-size: 9px;
  color: #2c8eec;
  margin-top: 5px;
  margin-left: 1px;
}

/*info*/

.profile .info {
  height: 64px;
  margin-top: 32px;
  display: flex;
  font-size: 30rpx;
  text-align: center;
  justify-content: space-between;
}

.info-item {
  width: 33%;
  padding: 11px 0;
}

.cut {
  border: 1px solid #efefef;
  margin-top: 10px;
  margin-bottom: 10px;
}

.count {
  color: #000;
  font-size: 18px;
  font-weight: 700;
  line-height: 1.5;
}

.count-title {
  font-size: 12px;
  color: #999;
}

/*list*/
.list{
  background:rgba(249,249,249,1);
  margin: 10px 12px 0;
  box-sizing: border-box;
  box-shadow: 0px 3px 3px 0px rgba(198, 227, 255, 1);
  border-radius: 6px;
}
.list-top {

}

.order-list {
  height: 100rpx;
  line-height: 100rpx;
  background: #fff;
  font-size: 32rpx;
  padding: 0 12px;
  box-sizing: border-box;
  border-bottom: 1px solid #f8f8f8;
}

.order-list>text {
  vertical-align: middle;
  margin-left: 16rpx;
}

.order-img {
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
}

.more {
  float: right;
  width: 8px;
  height: 14px;
  text-align: center;
  margin-top: 18px;
}

.list-bottom {
  margin-bottom: 10px;
}
