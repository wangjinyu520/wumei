/* pages/bossCertification/bossCertification.wxss */

page {
  width: 100%;
  height: 100%;
}

.main {
  width: 100%;
  height: 100%;
  background-color: rgba(247, 247, 247, 1);
}

.top-bg .text {
  width: 100%;
  position: absolute;
  top: 30px;
  color: #fff;
  text-align: center;
}

.text .h2 {
  font-size: 22px;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  line-height: 40px;
}

.text h4 {
  font-size: 14px;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  line-height: 20px;
}

.top-bg {
  width: 100%;
  height: 200px;
}

.top-bg image {
  width: 100%;
}

/* 主体部分开始 */

.info {
  position: absolute;
  top: 110px;
  left: 16px;
  width: 343px;
  background-color: #fff;
  border-radius: 16px;
  background: rgba(255, 255, 255, 1);
  overflow: hidden;
  padding-bottom: 20px;
}

/* 每行 */

.line {
  height: 50px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
  padding: 0 24px;
  box-sizing: border-box;
  border: 1px solid #fcfcfc;
}

.line:nth-child(1) {
  margin-top: 10px;
}

.line:nth-last-child(1) {
  border: none;
}

.line .title {
  height: 21px;
  font-size: 15px;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(34, 34, 34, 1);
  line-height: 21px;
}

.line  input {
  text-align: right;
  font-size: 15px;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(167, 167, 167, 1);
}

.textarea {
  margin-left: 24px;
}

.btn-box {
  /* position: absolute;
  bottom: 50px;
  left:24px; */
  margin: 0 auto;
  width: 283px;
  height: 48px;
  border-radius: 8px;
}

.pub-btn {
  background: rgba(33, 132, 227, 1);
  color: #fff;
}

/* 上传图片 */
.picture_list {
  padding: 20rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-items: flex-start;
  align-content: flex-start;
}

.picture_item {
  position: relative;
  margin-left: 24px;
  margin-bottom: 24px;
  width: 82px;
  height: 82px;
  /* border: 1px dashed #ccc; *//* box-sizing: border-box; */
}


.picture_item .del {
  position: absolute;
  top: -11rpx;
  right: -11rpx;
  color: #fff;
  border-radius: 50%;
  width: 40rpx;
  height: 40rpx;
  z-index: 2;
  line-height: 35rpx;
  text-align: center;
  background-color: #f00;
}
