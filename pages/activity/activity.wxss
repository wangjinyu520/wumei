/* pages/activity/activity.wxss */

page {
  background-color: #f9f9f9;
}

.container {
  min-height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center; /*竖轴的中心线对齐*/
  font-family: PingFangSC-Medium, PingFangSC;
}

/*搜索框*/

.search-bar {
  display: inline-flex;
  width: 100vw;
  justify-content: space-between;
  position: relative;
  z-index: 999;
  background: #FFFFFF;
}

.search-left {
  display: flex;
  position: relative;
  justify-content: flex-start;
  align-items: center;
  height: 100rpx;
}

.search-icon {
  position: absolute;
  left: 300rpx;
}

.search-input {
  position: absolute;
  height: 56rpx;
  width: 548rpx;
  left: 24rpx;
  background: #F2F2F2;
  border-radius: 28rpx;
  opacity: 0.2896;
}

input[placeholder] {
  font-size: 26rpx;
  color: #999999;
  text-align: center;
  padding-left: 70rpx;

}

.search-right {
  position: relative;
  width: 80rpx;
  height: 36rpx;
  align-items: center;
}

.search-text {
  display: flex;
  position: absolute;
  font-size: 30rpx;
  color: #000;
  margin: 26rpx 24rpx 0 0;
}

/*选择picker-bar*/


.icon-img{
  width: 12px;
  height: 10px;
}



/* fenlei */
.fenlei{
  height: 90rpx;
  line-height: 90rpx;
  border-bottom: 1rpx solid #e6e6e6;
  display: flex;
  align-items: center;
}
.fenlei text{
  font-size: 30rpx;
  color: #999999;
  margin-left: 15rpx;
}
/* 下拉框 */
.select_box {
  background: #fff;
  width: 100%;
  /* margin: 0 auto; */
  height: 90rpx;
  line-height: 90rpx;
  text-align: left;
  position: relative;
}

.select {
  box-sizing: border-box;
  width: 100%;
  height: 86rpx;
  /* border: 1px solid #efefef; */
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
}

.select_text {
  font-size: 28rpx;
  flex: 1;
  color: rgb(102, 102, 102);
  line-height: 86rpx;
  height: 86rpx;
}

.select_img {
  width: 40rpx;
  height: 40rpx;
  display: block;
  transition: transform 0.3s;
}

.select_img_rotate {
  transform: rotate(180deg);
}

.option_box {
  position: absolute;
  top: 86rpx;
  width: 100%;
  /* border: 1px solid #efefef; */
  box-sizing: border-box;
  height: 0;
  overflow-y: auto;
  border-top: 0;
  background: #fff;
  transition: height 0.3s;
  z-index: 100;
}

.option {
  display: block;
  line-height: 40rpx;
  font-size: 28rpx;
  border-bottom: 1px solid #efefef;
  padding: 10rpx;
  color: rgb(102, 102, 102);
}



activity-list {
  height: 300rpx;
  background: #fff;
  margin-top: 1rpx;
}
.item{
  border-bottom: 1px solid #e6e6e6;
}
.act-top {
  display: flex;
}

.act-img {
  width: 256rpx;
  height: 176rpx;
  background: #d8d8d8;
  margin-left: 24rpx;
  margin-top: 28rpx;
}

.act-desc {
  margin-top: 32rpx;
  margin-left: 20rpx;
}

.act-tltle {
  font-size: 30rpx;
  color: #000;
  font-weight: Medium;
}

.act-content {
  display: flex;
}

.content-left {
  display: flex;
  flex-direction: column;
}

.content-loc {
  margin-top: 14rpx;
  font-size: 26rpx;
  color: #666;
}

.content-time {
  margin-top: 26rpx;
  font-size: 22rpx;
  color: #666;
}

.content-right {
  margin-left: auto;
  margin-bottom: 10rpx;
}

.content-price {
  font-size: 26rpx;
  color: #ff2525;
}

.content-btn {
  width: 150rpx;
  height: 52rpx;
  margin-right: 16rpx;
  margin-top: 14rpx;
  background: #2184e3;
  font-size: 20rpx;
  color: #fff;
}

.content-btn>text {
  text-align: center;
  align-items: center;
}

.act-bottom {
  display: flex;
  font-size: 26rpx;
  color: #666;
  margin-top: 32rpx;
  margin-left: 24rpx;
}

.jion-price {
  margin-left: 24rpx;
}

.act-jion{
  margin-left: auto;
  margin-right: 18rpx;
  font-size: 24rpx;
  color: #2184E3;
}

