/* pages/refund/refund.wxss */
page{
  background: #F9F9F9;
}

.list-top{
  border-top: 12rpx solid #F9F9F9;
}
.service-list{
  height: 100rpx;
  line-height: 100rpx;
  background: #fff;
  font-size: 32rpx;
  border-bottom: 1px solid #f8f8f8;
}
.service-list>text{
  vertical-align: middle;
  margin-left: 18rpx;
}

.service-img{
  margin-left: 30rpx;
  width: 44rpx;
  height: 44rpx;
  vertical-align: middle;
}

.more{
  float: right;
  width: 8px;
  height: 14px;
  text-align: center;
  margin-top: 18px;
  margin-right: 12px;
}

/**/
.goods{
  margin-top: 20rpx;
  background: #FFFFFF;
  height: 324rpx;
}

.order-goods{
  display: flex;
  padding: 30rpx 26rpx 0 26rpx;
  border-bottom: 1px solid #F2F2F2;
}
.goods-img{
  width: 256rpx;
  height: 176rpx;
  background: #D8D8D8;
  margin-bottom: 28rpx;
}
.goods-detail{
  margin-top: 8rpx;
  margin-left: 24rpx;
}
.goods-title{
  display: flex;
}
.goods-title>text{
  font-size: 30rpx;
  color: #000000;
  font-weight: 550px;
}
.goods-title .goods-num{
  margin-left: auto;
  font-size: 28rpx;
  color: #999999;
}

.goods-desc{
  margin-top: 10rpx;
  font-size: 28rpx;
  color: #999999;
}

.goods-price{
  margin-top: 22rpx;
  font-size: 28rpx;
  color: #FF2525;
}
.order-gather{
  display: flex;
  margin-top: 36rpx;
  margin-right: 24rpx;
  float: right;
}
.order-num{
  font-size: 26rpx;
  color: #999999;
}
.order-express{
  font-size: 28rpx;
  color: #000000;
  margin-left: 10rpx;
}
.order-price{
  font-size: 30rpx;
  color: #FF2525;
  margin-left: 10rpx;
}

/**/
.order-msg{
  margin-top: 2rpx;
  height: 236rpx;
  background: #FFFFFF;
  
}
.msg-title{
  padding: 20rpx 0 0 26rpx; 
  font-size: 24rpx;
  color: #999999;
}

.msg{
  font-size: 30rpx;
  line-height: 46rpx;
  color: #444444;
  padding: 24rpx 0 0 26rpx;
}





