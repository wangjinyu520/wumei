page {
  background: #f7f7f7;
}

.list {
  height: 50px;
  background: #fff;
  display: flex;
  align-items: center;
  font-size: 32rpx;
  margin-top: 1px;
}

.preter {
  margin-left: 14px;
}

.free-from {
  margin-left: auto;
  color: #222;
  margin-right: 10px;
}

.free {
  margin-right: 10px;
}

.fimg {
  width: 8px;
  height: 14px;
  margin-left: 10px;
}

.button {
  margin-top: 479px;
}

.btn {
  height: 73px;
  width: 100%;
  display: flex;
  text-align: center;
  align-items: center;
  background: #fff;
  position: fixed;
  bottom: 0;
}

.frombtn {
  width: 100%;
  margin-left: 11px;
  margin-right: 12px;
  background-color: #2184e3;
}

