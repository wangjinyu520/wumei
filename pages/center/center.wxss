/* pages/center/center.wxss */
page{
  background: #F9F9F9;
}

.head{
  height: 300rpx;
}
.background{
  position:absolute;
	z-index:-1;
	width: 100vw;
	height: 240rpx;
}

.msg{
  display: flex;
}
.msg-img{
  width: 48rpx;
  height: 48rpx;
  margin-left: auto;
  margin-right: 30rpx;
}

.nav{
  background: #FFFFFF;
  position:absolute;
	z-index:-1;
  top: 80rpx;
  left: 24rpx;
  height: 210rpx;
  width: 700rpx;
  border: 1px solid #C9E4F4; 
  box-shadow:0px 0px 2px 0px #C9E4F4;
  border-radius: 10rpx;
  
}
.nav-top{
display:flex;
}
.nav-img{
  width: 96rpx;
  height: 96rpx;
  background: #E5E5E5;
  border-radius: 6rpx;
  margin-top: 28rpx;
  margin-left: 34rpx;
}
.nav-title{
  margin-top: 28rpx;
  margin-left: 16rpx; 
  flex-wrap: wrap;
}
.center-title{
  font-size: 32rpx;
  color: #000000;
  font-weight: 500;
  margin-top: 10rpx;
}
.center-assess{
  font-size: 24rpx;
  color: #999999;
  margin-top: 10rpx;
}
.nav-desc{
  font-size: 24rpx;
  color: #999999;
  margin-left: 30rpx;
  margin-top: 22rpx;

}


.order-classify{
  display: flex;
  background: #FFFFFF;
  margin-top: 20rpx;
  margin-left: 24rpx;
  height: 128rpx;
  width: 700rpx;
  border: 1px solid #FFFFFF; 
  border-bottom: 1px solid #C6E3FF; 
  box-shadow:0px 0px 5px 0px #C6E3FF;
  border-radius: 10rpx;
}

.info-item{
  text-align: center;
}
.cut{
  border: 1px solid #EFEFEF;
  margin-top: 10px;
  margin-bottom: 10px;
}
.info-item{
  width: 33%;
  padding: 22rpx 0;
}
.count{
  font-size: 36rpx;
  color: #000000;
}
.count-title{
  font-size: 24rpx;
  color: #999999;
}


.list{
  background: #FFFFFF;
  margin-top: 20rpx;
  margin-left: 24rpx;
  width: 700rpx;
  height: 208rpx;
  border-radius: 12rpx;
  border: 1px solid #FFFFFF; 
  border-bottom: 1px solid #C6E3FF; 
  box-shadow:0px 0px 5px 0px #C6E3FF;
}
.list-item{
  height: 100rpx;

  margin-left: 24rpx;
  font-size: 30rpx;
  color: #000000;
  display: flex;
  align-items: center;
}

.cut1{
  border: 1px solid #F2F2F2;
  margin: 0 26rpx; 
}

.list-item-img{
  width: 44rpx;
  height: 44rpx;
}
.list-item>text{
  margin-left: 16rpx;
}

.more{
  width:16rpx;
  height:24rpx;
  margin-left: auto;
  margin-right: 40rpx;
}


.button{
  height: 100rpx;
  margin: 60rpx 24rpx 0 24rpx;
  background: #2184E3;
  border-radius: 16rpx;
}
.button>text{
  align-items: center;
  font-size: 30rpx;
  color: #FFFFFF;
  
}

