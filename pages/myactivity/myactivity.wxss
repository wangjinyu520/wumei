/* pages/myactivity/myactivity.wxss */

page {
  background-color: #f9f9f9;
}
/* 切换部分 */
.order-box{
  background: #FFFFFF;
	width:100vw;
	height:88rpx;
	display: flex;
	justify-content: space-around;
	align-items: center;
	/* border-top: 2rpx; */
}
.order-label{
	width: 120rpx;
	height: 82rpx;
	display: flex;
	justify-content: center;
	align-items: center;
  font-size: 28rpx;
  color: #222222;
}
.order-label.active{
  color: #2184E3;
	border-bottom: 6rpx solid #2184E3;
}

.my-activity {
  height: 300rpx;
  background: #fff;
  margin-top: 1rpx;
}

.act-top {
  display: flex;
}

.act-img {
  width: 35%;
  height: 176rpx;
  background: #d8d8d8;
  margin-left: 24rpx;
  margin-top: 28rpx;
}

.act-desc {
  width: 65%;
  margin-top: 32rpx;
  margin-left: 20rpx;
}

.act-tltle {
  font-size: 30rpx;
  color: #000;
  font-weight: Medium;
}

.act-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.content-left {
  display: flex;
  flex-direction: column;
}

.content-loc {
  margin-top: 14rpx;
  font-size: 26rpx;
  color: #666;
}

.content-time {
  margin-top: 26rpx;
  font-size: 22rpx;
  color: #666;
}

.content-right {
  text-align: right;
  
}

.content-price {
  margin-right: 16rpx;
  font-size: 26rpx;
  color: #ff2525;
}

.content-btn {
  width: 150rpx;
  height: 52rpx;
  margin-right: 16rpx;
  margin-top: 14rpx;
  background: #2184e3;
  font-size: 20rpx;
  color: #fff;
}

.content-btn>text {
  text-align: center;
  align-items: center;
}

.act-bottom {
  display: flex;
  font-size: 26rpx;
  color: #666;
  margin-top: 32rpx;
  margin-left: 24rpx;
}

.jion-price {
  margin-left: 24rpx;
}

.act-jion{
  margin-left: auto;
  margin-right: 18rpx;
  font-size: 24rpx;
  color: #2184E3;
}
