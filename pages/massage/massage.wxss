/* pages/massage/massage.wxss */

page {
  background: #f9f9f9;
}

/*背景图*/

.background {
  position: absolute;
  z-index: -1;
  width: 100vw;
  height: 180rpx;
}

/*nav*/

.nav {
  background: #fff;
  position: relative;
  z-index: 999;
  top: 50rpx;
  left: 24rpx;
  height: 192rpx;
  width: 700rpx;
  border: 1px solid #c9e4f4;
  box-shadow: 0px 0px 2px 0px #c9e4f4;
  border-radius: 10rpx;
}

.nav-classify {
  height: 150rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 20rpx 80rpx;
}

.nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.nav-icon {
  width: 80rpx;
  height: 80rpx;
}

.text {
  height: 36rpx;
  font-size: 26rpx;
  font-weight: lighter;
  color: #999;
  line-height: 36rpx;
  margin-top: 10rpx;
}

/**/

.massage {
  position: relative;
  background: #fff;
  margin-top: 80rpx;
  margin-left: 24rpx;
  height: 800rpx;
  width: 700rpx;
  border: 1px solid #fff;
  border-bottom: 1px solid #c6e3ff;
  box-shadow: 0px 0px 5px 0px #c6e3ff;
  border-radius: 13rpx;
  overflow: hidden;
}

.massage button {
  width: 100%;
  height: 140rpx;
  position: absolute;
  opacity: 0;
}

.msg {
  width: 100%;
  height: 140rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: 2rpx solid #f2f2f2;
  transition: all 0.2s ease-in-out;
}

.msg-img {
  width: 88rpx;
  height: 88rpx;
  background: #d8d8d8;
  margin-left: 24rpx;
}

.msg-content {
  margin-left: 20rpx;
  margin-top: 6rpx;
}

.content-title {
  font-size: 30rpx;
  color: #000;
}

.content {
  font-size: 26rpx;
  color: #666;
  margin-top: 4rpx;
  overflow: hidden;
  text-overflow: ellipsis;
}

.msg-time {
  margin-left: auto;
  font-size: 26rpx;
  color: #666;
  margin-right: 24rpx;
}
